<Window x:Class="DsiplayCellDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DsiplayCellDemo"
        xmlns:lib="clr-namespace:DanteLib;assembly=DanteLib"
        mc:Ignorable="d"
        FontFamily="Arial"       
        Title="MainWindow" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
  
        </Grid.ColumnDefinitions>
        <lib:DanteGridView Background="LightBlue"  x:Name="danteControl"  BorderBrush="Gray" BorderThickness="1" />
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Content="Add items" Name="btnAdd" Width="100" Height="30" Click="btnAdd_Click"></Button>
            <Button Content="Load" Name="btnLoad" Width="100"  Height="30"></Button>
        </StackPanel>



    </Grid>
</Window>
