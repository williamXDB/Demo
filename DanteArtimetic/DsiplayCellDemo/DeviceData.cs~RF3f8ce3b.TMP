        public bool isCellInTheSameRow(int row,int col, List<CellState> mlist)
        {
            bool res = false;
            foreach (CellState mstate in mlist)
            {
                if (mstate.FRow == row && mstate.FCol-col)
                {
                    res = true;
                    break;
                }

            }



            return res;
        }
        public bool isCellInTheSameColumn(int col, List<CellState> mlist)
        {
            bool res = false;
            foreach (CellState mstate in mlist)
            {
                if (mstate.FCol == col)
                {
                    res = true;
                    break;
                }

            }
            return res;
        }


